html
  head
    title Music Hackathon Commits
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.css')
    link(rel='stylesheet', href='/css/style.css')
  body(style="padding-bottom: 0px;")

    .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
            .container
                a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.brand(href="#") Music Hackathon Commits
                .nav-collapse.collapse
                    ul.nav
                        li
                            a(href="/add-repo") Add Your Repo: http://musichackathon-commits.ex.fm !
    .container
        .row#commits
            - recentCommits.forEach(function(commit){
                div(class="commit")
                    div(class="image")
                        img(src=commit['image'])

                    div(class="header")
                        a(href="https://github.com/"= commit['username'], target="_blank")= commit['username']
                        span pushed to
                        a(href="/repo/"=commit['repoName'])= commit['repoName']

                    div.message= commit['message']

            - })

    script(src='/js/jquery.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/main.js')